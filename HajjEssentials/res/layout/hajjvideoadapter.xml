<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/video_type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|start"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/vid"
        android:textStyle="bold" />

    <!-- android:visibility="invisible"  android:drawableLeft="@drawable/play_png_v2" -->

    <TextView
        android:id="@+id/video_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/video_type"
        android:layout_alignBottom="@+id/video_type"
        android:layout_alignLeft="@+id/video_type"
        android:layout_marginLeft="16dp"
        android:textSize="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/vid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:drawableLeft="@drawable/play_png_v2"
        android:paddingTop="5dp" />

</RelativeLayout>